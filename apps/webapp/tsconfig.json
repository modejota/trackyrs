{
	"extends": "@trackyrs/typescript-config/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@trackyrs/ui/*": ["../../packages/ui/src/*"],
			"@trackyrs/utils/*": ["../../packages/utils/src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		"next.config",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
